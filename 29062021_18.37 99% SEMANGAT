    glVertex3i(-170, 90, 90); //E
    glVertex3i(-130, 0, 70); //B
    glVertex3i(40, 0, 67); //W
    glVertex3i(310, 30, 60); //C
    glVertex3i(270, 150, 80); //F
    glEnd();

    //BELAKANG - GEDUNG TENGAH
