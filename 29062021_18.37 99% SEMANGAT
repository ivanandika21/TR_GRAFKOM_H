void lampu_gantung(float x_lampu, float y_lampu) {
    int i = 0;
    glColor3f(0.2, 0.2, 0.2);
    for (i = 0; i < 10; i++) {
        glPushMatrix();
        glTranslatef(x_lampu, y_lampu, -10);
        glutSolidCube(1);
        glPopMatrix();
        y_lampu += 2;
    }
    glColor3f(0.7, 0.7, 0.7);
    for (i = 0; i < 10; i++) {
        glPushMatrix();
        glTranslatef(x_lampu, y_lampu - 1, -10);
        glutSolidCube(0.5);
        glPopMatrix();
        y_lampu -= 2;
    }
    glPushMatrix();
    glTranslatef(x_lampu, y_lampu, -10);
    glRotatef(90, 1.0, 0, 0);
    glColor3f(1, 0.725, 0.039);
    glutWireSphere(5, 10, 15);
    glColor3f(1, 0.925, 0.039);
    glutWireSphere(8, 10, 15);
    glPopMatrix();
}

void matahari() {
    int i = 0, size = 200;
    double transparan = 1;
    for (i = 0; i < 5; i++) {
        glPushMatrix();
        glColor4f(1, 0.725, 0.039, transparan);
        glTranslatef(3000, 6000, 0);
        glutSolidSphere(size, 200, 200);
        glPopMatrix();
        transparan -= 0.2;
        size += 80;
    }
}

void pohon() {
    glPushMatrix();
    //batang tutup atas
    glBegin(GL_QUADS);
    glColor3f(0.235, 0.090, 0.003);
    glVertex3i(-180, 90, 130);
    glVertex3i(-170, 90, 130);
    glVertex3i(-170, 90, 140);
    glVertex3i(-180, 90, 140);
    glEnd();
    //batang belakang
    glBegin(GL_QUADS);
    glColor3f(0.235, 0.090, 0.003);
    glVertex3i(-180, 0, 130);
    glVertex3i(-170, 0, 130);
    glColor3f(0.639, 0.321, 0.141);
    glVertex3i(-170, 90, 130);
    glVertex3i(-180, 90, 130);
    glEnd();
    //batang depan
    glBegin(GL_QUADS);
    glColor3f(0.235, 0.090, 0.003);
    glVertex3i(-180, 0, 140);
    glVertex3i(-170, 0, 140);
    glColor3f(0.639, 0.321, 0.141);
    glVertex3i(-170, 90, 140);
    glVertex3i(-180, 90, 140);
    glEnd();
    //batang kiri
    glBegin(GL_QUADS);
    glColor3f(0.141, 0.050, 0);
    glVertex3i(-180, 0, 130);
    glVertex3i(-180, 0, 140);
    glColor3f(0.462, 0.219, 0.078);
    glVertex3i(-180, 90, 140);
    glVertex3i(-180, 90, 130);
    glEnd();
    //batang kanan
    glBegin(GL_QUADS);
    glColor3f(0.235, 0.090, 0.003);
    glVertex3i(-170, 0, 130);
    glVertex3i(-170, 0, 140);
    glColor3f(0.639, 0.321, 0.141);
    glVertex3i(-170, 90, 140);
    glVertex3i(-170, 90, 130);
    glEnd();
    glPopMatrix();


    //daun pohon1
    glPushMatrix();
    glTranslatef(-92, -30, -70);
    glRotatef(30, 0, 1.0, 0);
    //daun tutup atas
    glBegin(GL_QUADS);
