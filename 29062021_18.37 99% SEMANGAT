    glColor4f(0.02, 0.38, 0, 0.8);
    glVertex3i(-150, 90, 100);
    glVertex3i(-150, 90, 170);
    glVertex3i(-150, 110, 170);
    glVertex3i(-150, 110, 100);
    glEnd();

    //daun tutup atas
